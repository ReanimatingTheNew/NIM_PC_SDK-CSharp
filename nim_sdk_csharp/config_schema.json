{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "sdk 配置",
    "type": "object",
    "properties": {
        "configs": {
            "description": "服务器配置",
            "type": "object",
			"properties": {
				"index" : {
					"description": "配置索引",
					"type": "number",
				},
				"list" : {
					"description": "所有配置列表",
					"type": "array",
					"items":{
						"type":"object",
						"properties" :{
							"server":{
								"description": "私有服务器",
								"type": "object",
								"properties":{
									"global_config":{
										"description"："全局配置",
										"type": "object",
										"properties":{
											"db_encrypt_key":{
												"description"："数据库加密密钥",
												"type": "string",
											},
											"preload_attach":{
												"description"："是否预先下载消息附件",
												"type": "bool",
											},
											"sdk_log_level":{
												"description"："sdk log 级别",
												"type": "number",
											},
											"private_server_setting":{
												"description"："是否使用私有服务器设置",
												"type": "bool",
											},
										},
									},
									"private_server_setting":{
										"description"："服务器地址配置",
										"type": "object",
										"properties":{
											"lbs":{
												"description"："link lbs地址",
												"type": "string",
											},
											"nos_lbs":{
												"description"："nos lbs地址",
												"type": "string",
											},
											"default_link":{
												"description"："默认link服务器地址",
												"type": "array",
												"items":{"type":"string"}
											},
											"default_nos_upload":{
												"description"："默认文件上传地址",
												"type": "array",
												"items":{"type":"string"}
											},
											"default_nos_download":{
												"description"："默认文件下载地址",
												"type": "array",
												"items":{"type":"string"}
											},
											"default_nos_access":{
												"description"："默认nos access",
												"type": "array",
												"items":{"type":"string"}
											},
											"rsa_public_key_module":{
												"description"："",
												"type": "string"
											}
										},
									}
								}
							},
							"appkey":{
								"description"："sdk appkey",
								"type": "string"
							},
							"roomlistserver":{
								"description"："获取聊天室列表的http地址",
								"type": "string"
							}
						}
					}
				}
			}
        }
    }
}